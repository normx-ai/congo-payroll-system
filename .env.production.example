# ============================================
# Configuration Production - norm_paie VPS OVH
# ============================================

# Database PostgreSQL
POSTGRES_USER=norm_paie
POSTGRES_PASSWORD=GENERATE_WITH_OPENSSL_RAND_HEX_32
POSTGRES_DB=norm_paie_db
DATABASE_URL="postgresql://norm_paie:YOUR_PASSWORD_HERE@postgres:5432/norm_paie_db"

# Auth NextAuth.js
# IMPORTANT: Générer avec: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_WITH_OPENSSL_RAND_BASE64_32"
NEXTAUTH_URL="https://votre-domaine.com"

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_WITH_OPENSSL_RAND_HEX_16

# Application
NODE_ENV=production
PORT=3000

# Multi-tenant
ENABLE_MULTI_TENANT=true

# Email (optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Monitoring (optionnel)
SENTRY_DSN=

# ============================================
# Instructions de génération des secrets:
# ============================================
# NEXTAUTH_SECRET:     openssl rand -base64 32
# POSTGRES_PASSWORD:   openssl rand -hex 32
# REDIS_PASSWORD:      openssl rand -hex 16
